<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginViewModel"
            type="com.clonebeamin.viewmodel.LoginViewModel" />

        <variable
            name="user"
            type="com.clonebeamin.model.User" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".view.UserLoginActivity">

        <EditText
            android:id="@+id/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/login_id_hint"
            android:inputType="textEmailAddress"
            android:maxLength="15"
            android:text="@={loginViewModel.id}" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:maxLength="15"
            android:text="@={loginViewModel.password}" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/main"
            android:text="@={user.refresh}"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/main"
            android:text="@={user.access}"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLength="6"
            android:onClick="@{()->loginViewModel.doLoginRequest()}"
            android:text="@string/login" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>